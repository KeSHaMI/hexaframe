# Local development defaults
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# When running locally (outside Docker)
DATABASE_URL=postgresql+asyncpg://{{ "${POSTGRES_USER}" }}:{{ "${POSTGRES_PASSWORD}" }}@{{ "${POSTGRES_HOST}" }}:{{ "${POSTGRES_PORT}" }}/{{ "${POSTGRES_DB}" }}

# When running inside docker-compose (uncomment to override)
# DATABASE_URL=postgresql+asyncpg://{{ "${POSTGRES_USER}" }}:{{ "${POSTGRES_PASSWORD}" }}@db:5432/{{ "${POSTGRES_DB}" }}

# A helper variable used by docker-compose service to enforce DB host=db
DATABASE_URL_DOCKER=postgresql+asyncpg://{{ "${POSTGRES_USER}" }}:{{ "${POSTGRES_PASSWORD}" }}@db:5432/{{ "${POSTGRES_DB}" }}
