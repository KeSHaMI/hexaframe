version: "3.9"

services:
  db:
    image: postgres:16-alpine
    container_name: {{ project_name | replace('-', '_') }}_db
    restart: unless-stopped
    environment:
      POSTGRES_DB: ${POSTGRES_DB:-app}
      POSTGRES_USER: ${POSTGRES_USER:-app}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-app}
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-app} -d ${POSTGRES_DB:-app}"]
      interval: 5s
      timeout: 3s
      retries: 10
    volumes:
      - pgdata:/var/lib/postgresql/data
    env_file:
      - .env

  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ project_name | replace('-', '_') }}_app
    command: uvicorn {{ package_name }}.interface.http.app:app --host 0.0.0.0 --port 8000 --reload
    environment:
      # When running inside compose, point to the 'db' host
      DATABASE_URL: ${DATABASE_URL_DOCKER:-postgresql+asyncpg://app:app@db:5432/app}
    env_file:
      - .env
    depends_on:
      db:
        condition: service_healthy
    ports:
      - "8000:8000"
    working_dir: /code
    volumes:
      - ./:/code

volumes:
  pgdata:
